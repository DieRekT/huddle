# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Transcription model (gpt-4o-mini-transcribe is fast and cheap)
OPENAI_TRANSCRIBE_MODEL=gpt-4o-mini-transcribe

# Server configuration
PORT=8787
NODE_ENV=development

# Summary update interval (seconds)
SUMMARY_INTERVAL_SEC=10

# Lookback window for summaries (seconds)
SUMMARY_LOOKBACK_SEC=120

# Room TTL (idle timeout in milliseconds)
ROOM_TTL_MS=7200000

# Max chunk size (bytes) - reject larger chunks
MAX_CHUNK_SIZE_BYTES=220000

# Topic shift detection
TOPIC_SHIFT_CONFIDENCE_THRESHOLD=0.7
TOPIC_SHIFT_DURATION_SEC=8
